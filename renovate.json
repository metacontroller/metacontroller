{
  "extends": [
    "config:base"
  ],
  "semanticCommits": "true",
  "semanticCommitType": "fix",
  "commitBody": "Signed-off-by: Renovate Bot <bot@renovateapp.com>",
  "rebaseWhen": "behind-base-branch",
  "packageRules": [
    {
      "matchPackageNames": [
        "k8s.io/api",
        "k8s.io/apimachinery",
        "k8s.io/client-go"
      ],
      "semanticCommitType": "fix",
      "separateMinorPatch": "true",
      "groupName": [
        "k8s.io packages"
      ],
      "extends": [
        "schedule:weekly"
      ]
    },
    {
      "managers": [
        "dockerfile",
        "gomod"
      ],
      "semanticCommitType": "fix"
    }
  ]
}
