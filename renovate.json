{
  "extends": [
    "config:base"
  ],
  "semanticCommits": "enabled",
  "semanticCommitType": "fix",
  "commitBody": "Signed-off-by: Renovate Bot <bot@renovateapp.com>",
  "rebaseWhen": "behind-base-branch",
  "allowedPostUpgradeCommands": ["cd test/integration && go mod tidy"]
  "packageRules": [
    {
      "matchPackageNames": [
        "k8s.io/component-base",
        "k8s.io/apimachinery",
        "k8s.io/client-go"
      ],
      "allowedVersions": "/^v0\\.[0-9]+\\.[0-9]+/",
      "semanticCommitType": "fix",
      "separateMinorPatch": "true",
      "groupName": [
        "k8s.io packages"
      ],
      "extends": [
        "schedule:weekly"
      ]
    },
    {
      "managers": [
        "dockerfile",
        "gomod"
      ],
      "semanticCommitType": "fix",
      "postUpdateOptions": [
        "gomodTidy",
        "gomodUpdateImportPaths"
      ],
      "postUpgradeTasks": {
        "commands": ["cd test/integration && go mod tidy"],
        "fileFilters": ["**/go.mod", "**/go.sum"],
        "executionMode": "update"
      }
    },
    {
      "matchFiles": [
        "test/integration/go.mod"
      ],
      "semanticCommitType": "test",
      "postUpdateOptions": [
        "gomodTidy",
        "gomodUpdateImportPaths"
      ]
    }
  ]
}
